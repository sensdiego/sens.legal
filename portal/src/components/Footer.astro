---
interface Props {
  lang?: 'en' | 'pt-br';
}

const { lang = 'en' } = Astro.props;
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-links">
      <a href="https://github.com/sensdiego" target="_blank" rel="noopener">GitHub</a>
      <span class="footer-sep" aria-hidden="true">&middot;</span>
      <a href="https://x.com/sensdiego" target="_blank" rel="noopener">X</a>
      <span class="footer-sep" aria-hidden="true">&middot;</span>
      <a href="mailto:diegomeyersens@gmail.com">Email</a>
    </div>
    <p class="footer-copy">&copy; {new Date().getFullYear()} sens.legal</p>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-xl) var(--space-lg);
    margin-left: var(--sidebar-width);
  }

  .footer-inner {
    max-width: var(--content-max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .footer-links a {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    transition: color 0.15s;
  }

  .footer-links a:hover {
    color: var(--color-text);
  }

  .footer-sep {
    color: var(--color-border);
    font-size: 0.75rem;
  }

  .footer-copy {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 50rem) {
    .footer {
      margin-left: 0;
    }

    .footer-inner {
      flex-direction: column;
      gap: var(--space-sm);
      text-align: center;
    }
  }
</style>
